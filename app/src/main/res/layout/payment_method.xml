<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorTextLight"
            android:background="@color/colorWarning"
            android:paddingVertical="10dp"
            android:textSize="25sp"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:text="@string/pay_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:background="@color/colorPositive"
                android:textColor="@color/colorTextLight"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="@string/price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/txt_net_pay"
                android:textAlignment="textEnd"
                android:background="@color/colorPositive"
                android:textColor="@color/colorTextLight"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:background="@color/colorPositive"
                android:textColor="@color/colorTextLight"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="@string/old_debt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/txt_old_debt"
                android:textAlignment="textEnd"
                android:background="@color/colorPositive"
                android:textColor="@color/colorTextLight"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:background="@color/colorPositive"
                android:textColor="@color/colorTextLight"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="@string/real_pay"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/txt_real_pay"
                android:textAlignment="textEnd"
                android:background="@color/colorPositive2"
                android:textColor="@color/colorTextLight"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:background="@color/colorPositive"
                android:textColor="@color/colorTextLight"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="@string/credit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:id="@+id/txt_credit"
                android:textAlignment="textEnd"
                android:background="@color/colorPositive3"
                android:textColor="@color/colorTextLight"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <ImageView
            android:background="@color/colorTextLight"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </ImageView>
        <LinearLayout
            android:background="@color/colorPositive3"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/txt_haft_pay"
                android:textColor="@color/colorTextLight"
                android:textSize="18sp"
                android:text="@string/haft"
                android:background="@color/colorPositive3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <ImageView
                android:background="@color/colorTextLight"
                android:layout_marginVertical="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent">

            </ImageView>
            <Button
                android:id="@+id/txt_full_pay"
                android:textSize="18sp"
                android:textColor="@color/colorTextLight"
                android:text="@string/get_full"
                android:background="@color/colorPositive3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
        </LinearLayout>
        <ImageView
            android:background="@color/colorTextLight"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </ImageView>
        <LinearLayout
            android:background="@color/colorPositive"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/one"
                    style="@style/green_pad"
                    android:text="1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/two"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/three"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <ImageView
                android:layout_marginHorizontal="30dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/four"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/five"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/six"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <ImageView
                android:layout_marginHorizontal="30dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/seven"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="7"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/eight"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/nine"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="9"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <ImageView
                android:layout_marginHorizontal="30dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/c"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="C"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/zero"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="0"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/x"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="X"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <ImageView
                android:layout_marginHorizontal="30dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>

        </LinearLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="50dp">
            <LinearLayout

                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <Button
                    android:id="@+id/btn_negative"
                    android:background="@color/colorTextTwilight"
                    android:textColor="@color/colorTextLight"
                    android:textSize="18sp"
                    android:text="@string/cancel"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>

                <Button
                    android:id="@+id/btn_positive"
                    android:background="@color/colorPositive"
                    android:textColor="@color/colorTextLight"
                    android:textSize="18sp"
                    android:text="@string/next"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <ImageView
                android:layout_centerInParent="true"
                android:layout_marginVertical="5dp"
                android:background="@color/colorTextLight"
                android:layout_width="1dp"
                android:layout_height="match_parent">

            </ImageView>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>