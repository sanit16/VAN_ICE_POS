<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rel_layer"
    android:background="@color/colorPositive2"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="130dp"
    android:layout_height="100dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_header"
            android:paddingRight="5dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorTextLight"
            android:textSize="20sp"
            android:text="แอน"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:layout_marginLeft="30dp"
            android:background="@color/colorTextLight"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </ImageView>
        <TextView
            android:id="@+id/txt_body"
            android:paddingRight="5dp"
            android:textColor="@color/colorTextLight"
            android:textAlignment="textEnd"
            android:text="0802829132"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:background="@color/colorPositive3"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorTextLight"
                    android:text="@string/old_debt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/debt"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorTextLight"
                    android:text="150"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <ImageView
                android:layout_marginHorizontal="5dp"
                android:background="@color/colorTextLight"
                android:layout_width="1dp"
                android:layout_height="match_parent">

            </ImageView>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/colorTextLight"
                    android:text="@string/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:id="@+id/status"
                    android:textColor="@color/colorTextLight"
                    android:text="สั่งซื้อ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_marginBottom="10dp"
        android:background="@color/colorTextLight"
        android:layout_width="1dp"
        android:layout_height="match_parent">

    </ImageView>


</RelativeLayout>