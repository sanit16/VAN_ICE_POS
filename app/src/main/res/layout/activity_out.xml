<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Out">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_line"
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </androidx.recyclerview.widget.RecyclerView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_car"
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </androidx.recyclerview.widget.RecyclerView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="100dp"
            android:id="@+id/recyclerview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPositive2"
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/txt_sum_price"
            android:textAlignment="textEnd"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorTextLight"
            android:text="0"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:layout_marginLeft="20dp"
            android:background="@color/colorTextLight"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </ImageView>
        <TextView
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorTextLight"
            android:text="@string/sum_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@color/colorTextTwilight"
            android:id="@+id/btn_negative"
            android:textColor="@color/colorTextLight"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">

        </Button>
        <ImageView
            android:background="@color/colorTextLight"
            android:layout_marginVertical="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent">

        </ImageView>
        <Button

            android:id="@+id/btn_positive"
            android:textColor="@color/colorTextLight"
            android:background="@color/colorPositive"
            android:text="@string/out"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">

        </Button>

    </LinearLayout>
</RelativeLayout>