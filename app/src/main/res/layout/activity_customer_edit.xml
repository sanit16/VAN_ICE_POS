<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerEdit">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="130dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </fragment>
            <!--            <com.google.android.gms.maps.MapView-->

            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent">-->

            <!--            </com.google.android.gms.maps.MapView>-->
            <LinearLayout
                android:id="@+id/layer"
                android:paddingBottom="90dp"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="220dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text"
                    android:textColor="@color/colorTextLight"
                    android:padding="5dp"
                    android:text="125 หมู่ 5 บ้านหนองจาน ต.โคกสะอาด อ.หนองบัวระเหว จ.ชัยภูมิ 36250"
                    android:background="@color/colorPositive2"
                    android:layout_width="match_parent"
                    android:layout_height="65dp">

                </TextView>
                <ImageView
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/wifi"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                </ImageView>
                <ImageView
                    android:visibility="invisible"
                    android:src="@drawable/location"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:paddingBottom="25dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/location"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                </ImageView>
            </LinearLayout>


        </RelativeLayout>
        <LinearLayout
            android:paddingVertical="5dp"
            android:background="@color/colorPositive2"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edt_username"
                android:inputType="text"
                android:drawableLeft="@drawable/user"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:textColorHint="@color/colorTextLight"
                android:textColor="@color/colorTextLight"
                android:hint="@string/user_name"
                android:layout_marginVertical="5dp"
                android:background="@color/colorPositive"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </EditText>
            <EditText
                android:id="@+id/edt_phone"
                android:inputType="number"
                android:drawableLeft="@drawable/phone"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:textColorHint="@color/colorTextLight"
                android:textColor="@color/colorTextLight"
                android:hint="@string/user_phone"
                android:layout_marginVertical="5dp"
                android:background="@color/colorPositive"
                android:layout_width="match_parent"
                android:layout_height="50dp">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@color/colorTextTwilight"
                android:id="@+id/btn_negative"
                android:textColor="@color/colorTextLight"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp">

            </Button>
            <ImageView
                android:background="@color/colorTextLight"
                android:layout_marginVertical="5dp"
                android:layout_width="1dp"
                android:layout_height="match_parent">

            </ImageView>
            <Button

                android:id="@+id/btn_positive"
                android:textColor="@color/colorTextLight"
                android:background="@color/colorPositive"
                android:text="@string/save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp">

            </Button>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>