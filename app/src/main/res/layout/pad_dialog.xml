<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorTextLight"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingVertical="10dp"
            android:textColor="@color/colorTextLight"
            android:background="@color/colorPositive2"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:id="@+id/txt_name"
            android:textSize="25sp"
            android:text="น้ำแข็งบดละเอียด"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <LinearLayout
                android:background="@color/colorPositive2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:background="@color/colorNegative2"
                    android:id="@+id/txt_value"

                    android:paddingRight="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorTextLight"
                    android:textSize="25sp"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                </TextView>
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </ImageView>
                <TextView
                    android:textColor="@color/colorTextLight"
                    android:paddingRight="5dp"
                    android:textAlignment="textEnd"
                    android:text="@string/sell_value"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@color/colorPositive2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_discount_price"
                    android:paddingRight="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorTextLight"
                    android:textSize="25sp"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                </TextView>
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </ImageView>
                <TextView
                    android:textColor="@color/colorTextLight"
                    android:paddingRight="5dp"
                    android:textAlignment="textEnd"
                    android:text="@string/discount_text"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:background="@color/colorPositive2"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_free"
                    android:paddingRight="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorTextLight"
                    android:textSize="25sp"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                </TextView>
                <ImageView
                    android:layout_marginLeft="30dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">

                </ImageView>
                <TextView
                    android:textColor="@color/colorTextLight"
                    android:paddingRight="5dp"
                    android:textAlignment="textEnd"
                    android:text="@string/free"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                </TextView>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingRight="5dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorPositive"
                    android:id="@+id/txt_get_money"
                    android:textSize="50sp"
                    android:text="0.0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:background="@color/colorPositive"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/one"
                    style="@style/green_pad"
                    android:text="1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/two"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/three"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <ImageView
                android:layout_marginHorizontal="30dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/four"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/five"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="5"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/six"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="6"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <ImageView
                android:layout_marginHorizontal="30dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/seven"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="7"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/eight"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="8"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/nine"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="9"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <ImageView
                android:layout_marginHorizontal="30dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/c"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="C"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/zero"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="0"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
                <ImageView
                    android:layout_marginVertical="15dp"
                    android:background="@color/colorTextLight"
                    android:layout_width="1dp"
                    android:layout_height="match_parent">

                </ImageView>
                <Button
                    android:id="@+id/x"
                    style="@style/green_pad"
                    android:textSize="25dp"
                    android:text="X"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>
            </LinearLayout>
            <ImageView
                android:layout_marginHorizontal="30dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <Button
                android:id="@+id/ok"
                style="@style/green_pad"
                android:textSize="25sp"
                android:text="ตกลง"
                android:layout_width="match_parent"
                android:layout_height="60dp"></Button>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>