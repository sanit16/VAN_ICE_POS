<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selll">
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:paddingBottom="10dp"
            android:background="@color/colorPositive"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:paddingTop="10dp"
            android:textColor="@color/colorTextLight"
            android:text="ร้านรุ่งโรจน์"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:weightSum="20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:gravity="center"
                android:text="รายการน้ำแข็ง"
                android:layout_weight="12"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:background="@color/colorPositive"
                android:textColor="@color/colorTextLight"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="4"
                android:text="จำนวน"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent">

            </ImageView>
            <TextView
                android:background="@color/colorWarning"
                android:textColor="@color/colorTextLight"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="4"
                android:text="ราคา"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="50dp"
            android:id="@+id/recyclerview"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout

        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:weightSum="8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/colorPositive"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/txt_sum_value"
                android:textSize="20sp"
                android:textAlignment="textEnd"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorTextLight"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:layout_marginLeft="20dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <TextView
                android:paddingRight="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextLight"
                android:text="@string/sum_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorNegative2"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/txt_sum_discount"
                android:paddingLeft="10dp"
                android:text="0"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:paddingRight="10dp"
                android:textColor="@color/colorTextLight"
                android:textSize="20sp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:layout_marginLeft="20dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <TextView
                android:paddingRight="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextLight"
                android:text="@string/sum_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorNegative"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/txt_sum_free"
                android:paddingLeft="10dp"
                android:text="0"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:paddingRight="10dp"
                android:textColor="@color/colorTextLight"
                android:textSize="20sp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:layout_marginLeft="20dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <TextView
                android:paddingRight="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextLight"
                android:text="@string/sum_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorWarning"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/txt_sum_price"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorTextLight"
                android:text="0"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:layout_marginLeft="20dp"
                android:background="@color/colorTextLight"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </ImageView>
            <TextView
                android:paddingRight="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTextLight"
                android:text="@string/sum_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:background="@color/colorTextTwilight"
            android:id="@+id/btn_negative"
            android:textColor="@color/colorTextLight"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">

        </Button>
        <ImageView
            android:background="@color/colorTextLight"
            android:layout_marginVertical="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent">

        </ImageView>
        <Button

            android:id="@+id/btn_positive"
            android:textColor="@color/colorTextLight"
            android:background="@color/colorPositive"
            android:text="@string/save"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp">

        </Button>

    </LinearLayout>
</RelativeLayout>